@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;

@model IEnumerable<Example.Covid19.WebUI.DTO.Cases.CountriesCases.Countries>
@{
  ViewData["Title"] = "Países";
}

<h1>Países</h1>

@{
  var countriesPagedList = ViewBag.CountriesPagedList;

  @Html.PagedListPager((IPagedList)countriesPagedList, page => Url.Action("GetCountries", new { page = page }),
      new PagedListRenderOptions
        {
          LinkToFirstPageFormat = "<< Primera",
        LinkToPreviousPageFormat = "< Anterior",
        LinkToNextPageFormat = "Siguiente >",
        LinkToLastPageFormat = "&Uacute;ltima >>",
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
      }
  )
}

<table class="table table-bordered">
  <thead>
    <tr class="text-center">
      <th scope="col">País</th>
      <th scope="col">Slug</th>
      <th scope="col">ISO2</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var country in countriesPagedList)
    {
      <tr class="text-center">
        <td>@country.Country</td>
        <td>@country.Slug</td>
        <td>@country.ISO2</td>
      </tr>
    }
  </tbody>
</table>

@Html.PagedListPager((IPagedList)countriesPagedList, page => Url.Action("GetCountries", new { page = page }),
    new PagedListRenderOptions
    {
      LinkToFirstPageFormat = "<< Primera",
      LinkToPreviousPageFormat = "< Anterior",
      LinkToNextPageFormat = "Siguiente >",
      LinkToLastPageFormat = "&Uacute;ltima >>",
      LiElementClasses = new string[] { "page-item" },
      PageClasses = new string[] { "page-link" }
    }
)